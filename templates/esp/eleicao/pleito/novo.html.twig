{% extends "base.html.twig" %}
{% block header %}
{% endblock %}

{% block content %}
    <div class="fundo-topo-menu">
        Cadastro de Eleição
    </div>
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="col-md-6 col-xs-12 col-md-offset-3 fundo-shadow fundo-padding jumbotron">
                    {{ form_start(form) }}
                    <div class="col-md-12 col-xs-12">
                        {{ form_row(form.titulo, {'label':'Título'}) }}
                    </div>
                    <div class="col-md-12 col-xs-12">
                        {{ form_row(form.inicio, {'label':'Início (Data/Hora)'}) }}
                    </div>
                    <div class="col-md-12 col-xs-12">
                        {{ form_row(form.termino, {'label':'Término (Data/Hora)'}) }}
                    </div>
                    <div class="col-md-12 col-xs-12">
                        <input type="submit" value="Enviar" class="btn btn-primary"/>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}