{% extends "base.html.twig" %}
{% block header %}
{% endblock %}

{% block content %}
    <div class="fundo-topo-menu">
        Cadastro de Lotação (Especializada / Divisão)
    </div>
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="col-md-12 col-xs-12">
                    {{ form_start(form) }}
                    <div class="col-md-12 col-xs-12">
                        {{ form_row(form.descricao, {'label':'Descrição'}) }}
                    </div>
                    <div class="col-md-6 col-xs-12">
                        {{ form_row(form.tiposdeato, {'label':'Tipos de Ato'}) }}
                    </div>
                    <div class="col-md-6 col-xs-12">
                        {{ form_row(form.tiposdeprocesso, {'label':'Tipos de Processo'}) }}
                    </div>
                    <input type="submit" value="Enviar" class="btn btn-primary"/>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}